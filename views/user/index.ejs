<form action="" method="POST" id="form_create_user">
    <div class="block_login">
        <h1 style="margin: 50px"><b>Đăng Nhập</b></h1>
        <%if (error) {%>
        <div class="alert alert-danger" role="alert">
            <strong>No no no ::)!</strong>  Đăng nhập đíu thành công
        </div>
        <%}%>
        <div class="form-group">
            <input type="hidden" name="id">
            <input type="hidden" name="_csrf" id="_csrf" value="<%= csrfToken%>">
            <input type="text" name="account" class="form-control" placeholder="Tài khoản" >
            <input type="password" name="password" class="form-control" placeholder="Mật khẩu" >
            <button type="submit" class="btn btn-danger">Đăng nhập</button>
            <p>or</p>
            <a href="<%=BASE_URL+"/user/register"%>" class="btn btn-outline-danger" style="width: 100%; padding: 10px">Đăng ký</a>
        </div>
    </div>
</form>